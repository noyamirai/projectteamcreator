{{> title-banner}}

<main>
    <h2>Alle teams!!</h2>

    <ol class="grid grid--list">
        {{#each teamData}}
            <li>
                <a class="box-shadow" href="{{../baseURL}}/{{this.number}}/overview">
                    <p>{{this.number}}</p>
                    <div>
                        <h3>{{this.name}}</h3>

                        <p>{{this.students.length}} studenten</p>
                    </div>

                    <img class="icon" src="{{root}}/public/images/icons/arrow-icon.svg" alt="Accordion arrow icon">
                </a>
            </li>
        {{/each}}
    </ol>

    <div class="btn--container">
        <a class="btn--small btn--small-arrow" href="{{prevURL}}"><img src="{{../baseURL}}/public/images/icons/arrow-icon.svg" alt="Back icon"></a>
        <a class="btn form-trigger" href="{{baseURL}}/team-generation/form">Nieuwe teams maken</a>
    </div>

    {{> form}}

</main>

<script async src="{{../baseURL}}/public/js/form-script.js"></script>