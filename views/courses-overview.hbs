{{> profile-banner}}

<main>
    <h2>Jouw gegeven vakken</h2>

    <ul class="grid grid--list">
        {{#each courseData}}
            <li>
                <a class="box-shadow" href="{{../baseURL}}/{{courseId.linkRef}}/classes">
                    <p>{{acronym}}</p>
                    <div>
                        <h3>{{courseId.title}}</h3>
                        <p>{{classIds.length}} klassen</p>
                    </div>

                    <img class="icon" src="{{root}}/public/images/icons/arrow-icon.svg" alt="Accordion arrow icon">
                </a>
            </li>
        {{/each}}
    </ul>
</main>