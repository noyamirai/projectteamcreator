{{> title-banner}}

<main>
    <h2>Jouw klassen</h2>

    <ol class="grid grid--overview">
        {{#each classData}}
            <li>
                <a class="box-shadow" href="{{../baseURL}}/{{linkRef}}">
                    <div>
                        <h3>{{title}}</h3>
                        <p>{{students.length}} studenten</p>
                    </div>
                    <p>Bekijk klas</p>
                </a>
            </li>
        {{/each}}
    </ol>

    <a class="btn--small btn--small-arrow" href="{{prevURL}}"><img src="{{../baseURL}}/public/images/icons/arrow-icon.svg" alt="Back icon"></a>
</main>