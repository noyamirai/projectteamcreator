{{> title-banner}}

<main>

    <form action="{{formURL}}" method="post">
        <fieldset>
            <legend>
                Hoe groot mogen de teams zijn?
            </legend>
            <div>
                <input type="radio" id="teamSize-2" name="teamSize" value="2" checked="true" />
                <label for="teamSize-2">
                    <span>
                        Twee
                    </span>
                    <span>
                        studenten
                    </span>
                </label>
            </div>
            <div>
                <input type="radio" id="teamSize-3" name="teamSize" value="3" />
                <label for="teamSize-3">
                    <span>
                        Drie
                    </span>
                    <span>
                        studenten
                    </span>
                </label>
            </div>
            <div>
                <input type="radio" id="teamSize-4" name="teamSize" value="4" />
                <label for="teamSize-4">
                    <span>
                        Vier
                    </span>
                    <span>
                        studenten
                    </span>
                </label>
            </div>
        </fieldset>

        <div class="btn--container__column">
            <button type="submit">Start</button>
            {{#if classTeams}}
                <a href="{{prevURL}}/teams">Annuleren</a>
            {{else}}
                <a href="{{prevURL}}">Annuleren</a>
            {{/if}}
        </div>
    </form>
</main>